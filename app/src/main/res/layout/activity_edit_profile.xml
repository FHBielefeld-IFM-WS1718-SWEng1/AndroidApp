<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="partyplaner.partyplaner.Profile.EditProfileActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageView9"
                    tools:ignore="ContentDescription"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@color/black" />

                <TextView
                    android:id="@+id/NameText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:text="@string/editProfileName"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageView9" />

                <TextView
                    android:id="@+id/GenderTextEdit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:text="@string/editProfileGender"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/NameText" />

                <TextView
                    android:id="@+id/BirthdateTextEdit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="7dp"
                    android:text="@string/editProfileGeb_Datum"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/GenderTextEdit" />

                <TextView
                    android:id="@+id/EmailTextEdit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:text="@string/editProfileE_Mail"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/BirthdateTextEdit" />

                <Button
                    android:id="@+id/EditProfileButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:text="@string/profildaten_bearbeiten"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/EmailTextEdit" />

                <EditText
                    android:id="@+id/EditFirstName"
                    android:layout_width="242dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:labelFor="@+id/EditFirstName"
                    android:text="@string/horst_teesofa"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toTopOf="@+id/GenderTextEdit"
                    app:layout_constraintEnd_toEndOf="parent" />

                <EditText
                    android:id="@+id/EditGender"
                    android:layout_width="242dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:ems="10"
                    android:inputType="text"
                    android:labelFor="@+id/EditGender"
                    android:text="@string/non_binary"
                    app:layout_constraintBottom_toTopOf="@+id/BirthdateTextEdit"
                    app:layout_constraintEnd_toEndOf="parent" />

                <EditText
                    android:id="@+id/EditBirthdate"
                    android:layout_width="242dp"
                    android:layout_height="46dp"
                    android:layout_marginEnd="8dp"
                    android:ems="10"
                    android:inputType="date"
                    android:labelFor="@+id/EditBirthdate"
                    android:text="@string/_01_01_2018"
                    app:layout_constraintBottom_toTopOf="@+id/EmailTextEdit"
                    app:layout_constraintEnd_toEndOf="parent" />

                <EditText
                    android:id="@+id/EditEmail"
                    android:layout_width="242dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:ems="10"
                    android:inputType="textEmailAddress"
                    android:labelFor="@+id/EditEmail"
                    android:text="@string/horstteesofa_web_de"
                    app:layout_constraintBottom_toTopOf="@+id/EditProfileButton"
                    app:layout_constraintEnd_toEndOf="parent" />
            </android.support.constraint.ConstraintLayout>
        </LinearLayout>

    </ScrollView>
</LinearLayout>
